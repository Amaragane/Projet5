@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow border-0 rounded my-4">
            <div class="card-header bg-white py-3">
                <h2 class="text-center fs-4 m-0">Connexion</h2>
            </div>
            <div class="card-body p-4">
                <form id="account" method="post" asp-route-returnUrl="@Url.Action("Index", "Voitures")">
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                        <label asp-for="Input.Email" class="form-label">Email</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                        <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    
                    <div class="checkbox mb-3">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            Se souvenir de moi
                        </label>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button id="login-submit" type="submit" class="btn btn-express">Se connecter</button>
                    </div>
                    
                    <div class="mt-3 text-center">
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cr√©er un nouveau compte</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
