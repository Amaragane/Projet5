@model IEnumerable<Projet5.Models.VoitureModel>

@{
    ViewData["Title"] = "Gestion des véhicules";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Administration des véhicules</h1>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Ajouter un véhicule
        </a>
    </div>

    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Liste des véhicules</h3>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>VIN</th>
                            <th>Marque</th>
                            <th>Modèle</th>
                            <th>Année</th>
                            <th>Finition</th>
                            <th>Prix d'achat</th>
                            <th>Disponibilité</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@item.Vin</td>
                                <td>@item.Marque</td>
                                <td>@item.Modele</td>
                                <td>@item.AnneeModel</td>
                                <td>@item.Finition</td>
                                <td>@item.PrixAchat.ToString("C0")</td>
                                <td>
                                    @if (item.EstDisponible) {
                                        <span class="badge bg-success">Disponible</span>
                                    } else {
                                        <span class="badge bg-danger">Non disponible</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Vin" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Vin" class="btn btn-sm btn-info">
                                            <i class="bi bi-eye"></i> Détails
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Vin" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Statistiques</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Total des véhicules</h5>
                            <p class="card-text fs-1">@Model.Count()</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Véhicules disponibles</h5>
                            <p class="card-text fs-1">@Model.Count(v => v.EstDisponible)</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card bg-light">
                        <div class="card-body text-center">
                            <h5 class="card-title">Valeur totale</h5>
                            <p class="card-text fs-1">@Model.Sum(v => v.PrixAchat).ToString("C0")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
