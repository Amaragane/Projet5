@model Projet5.Models.VoitureModel

@{
    ViewData["Title"] = "Ajouter un véhicule";
}

<div class="container">
    <div class="row mb-4">
        <div class="col">
            <h1 class="display-6">Ajouter un nouveau véhicule</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Voitures" asp-action="Index">Accueil</a></li>
                    <li class="breadcrumb-item"><a asp-action="Admin">Administration</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Ajouter un véhicule</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Informations du véhicule</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Marque" class="form-label">Marque</label>
                                <input asp-for="Marque" class="form-control" />
                                <span asp-validation-for="Marque" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Modele" class="form-label">Modèle</label>
                                <input asp-for="Modele" class="form-control" />
                                <span asp-validation-for="Modele" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="AnneeModel" class="form-label">Année du modèle</label>
                                <input asp-for="AnneeModel" class="form-control" type="number" min="1980" max="@DateTime.Now.Year" />
                                <span asp-validation-for="AnneeModel" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Finition" class="form-label">Finition</label>
                                <input asp-for="Finition" class="form-control" />
                                <span asp-validation-for="Finition" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateAchat" class="form-label">Date d'achat</label>
                                <input asp-for="DateAchat" class="form-control" type="date" />
                                <span asp-validation-for="DateAchat" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="DateDisponibilité" class="form-label">Date de disponibilité</label>
                                <input asp-for="DateDisponibilité" class="form-control" type="date" />
                                <span asp-validation-for="DateDisponibilité" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="PrixAchat" class="form-label">Prix d'achat</label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input asp-for="PrixAchat" class="form-control" type="number" />
                                </div>
                                <span asp-validation-for="PrixAchat" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="CoutReparation" class="form-label">Coût des réparations</label>
                                <div class="input-group">
                                    <span class="input-group-text">€</span>
                                    <input asp-for="CoutReparation" class="form-control" type="number" />
                                </div>
                                <span asp-validation-for="CoutReparation" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Reparation" class="form-label">Réparations effectuées</label>
                            <textarea asp-for="Reparation" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Reparation" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="ImageUrl" class="form-label">URL de l'image</label>
                            <input asp-for="ImageUrl" class="form-control" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            <div class="form-text">Entrez l'URL complète de l'image du véhicule</div>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="EstDisponible" class="form-check-input" />
                            <label asp-for="EstDisponible" class="form-check-label">Disponible à la vente</label>
                            <span asp-validation-for="EstDisponible" class="text-danger"></span>
                        </div>
                        
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Admin" class="btn btn-outline-secondary">Annuler</a>
                            <button type="submit" class="btn btn-express">Enregistrer</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
