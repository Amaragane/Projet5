@model Projet5.Models.VoitureModel

@{
   ViewData["Title"] = "Ajouter une voiture";
}

<div class="container mt-4" style="max-width: 500px;">
   <h1 style="font-family: 'Times New Roman', serif; color: #8B7765; font-style: italic; margin-bottom: 5px;">Ajouter une voiture</h1>
   <p style="color: #777; font-size: 14px; margin-bottom: 30px;">tous les champs sont obligatoires</p>

   <form asp-action="Create" method="post" enctype="multipart/form-data">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>

      <div class="mb-4">
         <label asp-for="PrixAchat" class="form-label" style="color: #333; font-weight: 500;">Prix de vente</label>
         <input asp-for="PrixAchat" class="form-control" style="border-radius: 0; height: 45px; border: 1px solid #ddd;" />
         <span asp-validation-for="PrixAchat" class="text-danger"></span>
      </div>

      <div class="mb-4">
         <label asp-for="AnneeModel" class="form-label" style="color: #333; font-weight: 500;">Année</label>
         <input asp-for="AnneeModel" class="form-control" type="number" min="1980" max="@DateTime.Now.Year" style="border-radius: 0; height: 45px; border: 1px solid #ddd;" />
         <span asp-validation-for="AnneeModel" class="text-danger"></span>
      </div>

      <div class="mb-4">
         <label asp-for="Marque" class="form-label" style="color: #333; font-weight: 500;">Marque</label>
         <input asp-for="Marque" class="form-control" style="border-radius: 0; height: 45px; border: 1px solid #ddd;" />
         <span asp-validation-for="Marque" class="text-danger"></span>
      </div>

      <div class="mb-4">
         <label asp-for="Modele" class="form-label" style="color: #333; font-weight: 500;">Modèle</label>
         <input asp-for="Modele" class="form-control" style="border-radius: 0; height: 45px; border: 1px solid #ddd;" />
         <span asp-validation-for="Modele" class="text-danger"></span>
      </div>

      <div class="mb-4">
         <label asp-for="Finition" class="form-label" style="color: #333; font-weight: 500;">Finition</label>
         <input asp-for="Finition" class="form-control" style="border-radius: 0; height: 45px; border: 1px solid #ddd;" />
         <span asp-validation-for="Finition" class="text-danger"></span>
      </div>

      <div class="mb-4 d-inline">

         <label asp-for="ImageUrl" class="form-label" style="color: #333; font-weight: 500;">Visuel</label>
         <div id="visuel" class="form-control " style="border-radius: 0; height: 120px; border: 1px solid #ddd; ">

            <a id="visuelBtn" class="btn" >+</a>
            <div id="preview" style=" max-width: 150px;"><span style="margin-left:10px">Ajouter une image</span></div>



            <input id="fileInput" name="ImageUrl" asp-for="ImageUrl" type="file" />
            </div>
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        
        <!-- Champs cachés pour les autres propriétés requises -->
        <input asp-for="DateAchat" type="hidden" value="@DateOnly.FromDateTime(DateTime.Now)" />
        <input asp-for="DateDisponibilité" type="hidden" value="@DateOnly.FromDateTime(DateTime.Now)" />
        <input asp-for="CoutReparation" type="hidden" value="0" />
        <input asp-for="Reparation" type="hidden" value="Aucune réparation" />
        <input asp-for="EstDisponible" type="hidden" value="true" />
        
        <div class="text-center mt-5 mb-4">
            <button type="submit" class="btn btn-express">Publier</button>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/voitures/imageUpload.js"></script>
}
