@model ErrorViewModel
@{
    ViewData["Title"] = "Erreur";
}

<div class="container text-center py-5">
    <h1 class="display-4 text-danger mb-4">Oups!</h1>
    <p class="lead mb-4">Une erreur s'est produite lors du traitement de votre demande.</p>
    
    @if (Model.ShowRequestId)
    {
        <p class="text-muted">
            <small>
                <strong>Request ID:</strong> <code>@Model.RequestId</code>
            </small>
        </p>
    }
    
    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary">Retour Ã  l'accueil</a>
    </div>
</div>
